# ===========================================
# ENVIRONMENT VARIABLES FOR VISOR APP
# Copy this to .env.local and fill in values
# ===========================================

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ===========================================
# APP CONFIGURATION
# ===========================================
NEXT_PUBLIC_APP_URL=https://visor.app
NEXT_PUBLIC_APP_NAME=Visor

# ===========================================
# NETWORK CONFIGURATION (Base Mainnet)
# ===========================================
NEXT_PUBLIC_BASE_MAINNET_RPC=https://mainnet.base.org

# ===========================================
# FARCASTER CONFIGURATION
# ===========================================
# Neynar API for Farcaster user lookup and follow verification
# Get your API key at https://neynar.com - free tier available
NEXT_PUBLIC_NEYNAR_API_KEY=your_neynar_api_key

# Creator FIDs (users must follow these to join whitelist)
NEXT_PUBLIC_CREATOR_FID_1=250704
NEXT_PUBLIC_CREATOR_FID_2=1043335

# ===========================================
# VISOR NFT CONFIGURATION (Base Mainnet)
# ===========================================
# NFT Symbol used in Mint.club SDK
NEXT_PUBLIC_VISOR_NFT_SYMBOL=VISOR

# NFT Contract Address on Base Mainnet (deployed via Mint.club)
NEXT_PUBLIC_VISOR_NFT_ADDRESS_MAINNET=0x2cc716F614dB19252CC4A6B54313B8f5162956Fb

# NFT Metadata URI (IPFS)
NEXT_PUBLIC_VISOR_NFT_METADATA_URI=ipfs://QmPAbF6q8TB5ts7mxEbTzYj3fjYK3W1m6iqhnAsmTfVccL

# NFT Image URL (from metadata)
NEXT_PUBLIC_VISOR_NFT_IMAGE=ipfs://QmPMghu1Ww29ixR5LvETKJtmpNty8jVWgDc15iPqBMtShj

# NFT Image URL (IPFS or HTTP URL for the NFT artwork)
# Example: ipfs://QmXxx... or https://example.com/nft.png
NEXT_PUBLIC_VISOR_NFT_IMAGE=ipfs://your_image_hash

# ===========================================
# BONDING CURVE CONFIGURATION
# ===========================================
# Curve Type: LINEAR, EXPONENTIAL, or FLAT
NEXT_PUBLIC_CURVE_TYPE=LINEAR
# Number of steps in bonding curve (2-1000)
NEXT_PUBLIC_CURVE_STEP_COUNT=20
# Max supply of NFTs
NEXT_PUBLIC_NFT_MAX_SUPPLY=10000
# Initial mint price in ETH
NEXT_PUBLIC_INITIAL_MINT_PRICE=0.0001
# Final mint price in ETH
NEXT_PUBLIC_FINAL_MINT_PRICE=0.01
# Creator royalty percentage (0-50)
NEXT_PUBLIC_CREATOR_ROYALTY=5
# Creator allocation (free NFTs for creator)
NEXT_PUBLIC_CREATOR_ALLOCATION=100

# ===========================================
# RESERVE TOKEN (WETH on Base Mainnet)
# ===========================================
NEXT_PUBLIC_WETH_ADDRESS_MAINNET=0x4200000000000000000000000000000000000006

# ===========================================
# POINTS CONFIGURATION
# ===========================================
# Points awarded per NFT mint
NEXT_PUBLIC_POINTS_PER_MINT=100000
# Points awarded per successful referral
NEXT_PUBLIC_POINTS_PER_REFERRAL=1000
# Points awarded for daily check-in
NEXT_PUBLIC_POINTS_DAILY_CHECKIN=100
# Bonus points for 7-day streak
NEXT_PUBLIC_POINTS_STREAK_BONUS=500

# ===========================================
# API RATE LIMITING
# ===========================================
# Max requests per minute per IP
API_RATE_LIMIT=100

# ===========================================
# TRANSACTION CONFIGURATION
# ===========================================
# Default slippage tolerance (percentage)
NEXT_PUBLIC_DEFAULT_SLIPPAGE=5
# Transaction timeout in milliseconds
NEXT_PUBLIC_TX_TIMEOUT=60000

# ===========================================
# BASE BUILDER CODE (Transaction Attribution)
# ===========================================
# For Base ecosystem tracking
NEXT_PUBLIC_BASE_BUILDER_CODE=bc_gy096wvf
